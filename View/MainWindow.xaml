<Window  x:Class="Crypto_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crypto_V2.ViewModel"
        mc:Ignorable="d"
        Title="Crypto V2"  WindowStyle="None" AllowsTransparency="True" >

    <Window.DataContext>
        <local:MainwindowViewModel/>
    </Window.DataContext>
    <Window.Clip>
        <RectangleGeometry Rect="0,0,857,483" RadiusX="25" RadiusY="25"/>
    </Window.Clip>

    <Window.Resources>
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Rectangle Name="ButtonBackground" Fill="{TemplateBinding Background}" RadiusX="4" RadiusY="4"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBackground" Property="Fill" Value="Pink"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBackground" Property="Fill" Value="Pink"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Height="485" VerticalAlignment="Top">
        <Border HorizontalAlignment="Left" Margin="0,60,0,0" VerticalAlignment="Top" Background="GhostWhite"  BorderThickness="2"  CornerRadius="8,8,8,8" Width="61" Height="350" >
            <StackPanel Width="242">
                <Button
                   x:Name="APIbutton"
                    Content="API"
                    FontSize="25"
                    FontFamily="Agency FB"
                    Background="Silver"
                    Click="CheckApiStatus"
                    Height="50" Width="56"
                    Margin="0,200,17,25"
                    HorizontalAlignment="Left"
                    Style="{StaticResource WindowButtonStyle}"/>
                <Button Content="Exit" 
                        Height="50" Width="56"
                        Style="{StaticResource WindowButtonStyle}"
                        FontSize="25"
                        FontFamily="Agency FB"
                        Background="Silver"
                        Click="CloseButton_Click"
                        HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Background="Silver" Height="20" CornerRadius="8,8,8,8" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"/>
        </Border>
    </Grid>


</Window>
